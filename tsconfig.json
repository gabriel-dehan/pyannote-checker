{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "configs/*": ["./configs/*"],
      "src": ["src"]
    },
  },
  "include": [
    ".eslintrc.js",
    "src/**/*",
    "configs/**/*",
    "cli/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "files": [
    "src/main.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build.js"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
